{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "Product"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "code": {
            "type": "string",
            "required": true,
            "unique": true,
            "minLength": 2,
            "maxLength": 15
        },
        "name": {
            "type": "string",
            "required": true,
            "minLength": 2,
            "maxLength": 80
        },
        "image": {
            "allowedTypes": [
                "images"
            ],
            "type": "media",
            "multiple": false,
            "required": false
        },
        "quantities": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::quantity.quantity",
            "mappedBy": "product"
        }
    }
}
