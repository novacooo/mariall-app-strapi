{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "code": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 2,
      "maxLength": 15
    },
    "name": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 80
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "quantities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::quantity.quantity",
      "mappedBy": "product"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    }
  }
}
